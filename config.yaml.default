model_filter:
  # Base URL of underlying OpenAI-like server
  # NB It *should* include "/v1"
  # Also don't include trailing slash
  base_url: http://localhost:8080/v1

  # Cache results for this many seconds
  # By default, no caching is done
  cache_ttl: 900

  # Connection timeout in seconds
  # By default, there is none
  connection_timeout: 10

  # Maximum time in seconds to wait for a response
  # By default, around 5 minutes
  total_timeout: 300

  # Set case sensitivity
  # Defaults to false
  # This applies to both regexp and simple matching
  case_sensitive: false

  # Python regexp matching
  # NB The pattern has to match the entire name from beginning to end
  regexp:
    - ".*llama.*"

  # Exact name matching
  simple:
    - "some_other_model"
